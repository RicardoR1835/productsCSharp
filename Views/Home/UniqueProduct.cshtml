@model productsNcategoriescSharp.Models.Product
<br>
<br>
<h1 class="text-center">@Model.Name</h1>
<br>
<br>
<div class="container d-flex justify-content-around">
    <!-- <partial name="CurrentCategoriesPartial"></partial> -->
    <div class="login d-inline-block">   
        <h3 class="text-center">Existing Categories</h3>
        <br>
        @foreach (var cat in @Model.Associations)
        {
            
            <p>@cat.Category.Name</p>            

        }
    </div>
    <div class="registration">
        <form action="/addcategory" method="POST">
            <h2>Add Category</h2>
            <br>
            <select style="color: black;" name="CategoryId">
                @foreach (var item in ViewBag.AllCategories)
                {
                    
                    <option style="color: black;" value="@item.CategoryId">@item.Name</option>
                }
            </select>
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <br>
            <br>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
    
    
</div>