@model productsNcategoriescSharp.Models.Category
<br>
<br>
<h1 class="text-center">@Model.Name</h1>
<br>
<br>
<div class="container d-flex justify-content-around">
    <!-- <partial name="CurrentCategoriesPartial"></partial> -->
    <div class="login d-inline-block">   
        <h3 class="text-center">Existing Categories</h3>
        <br>
        @foreach (var prod in @Model.Associations)
        {
            
            <p>@prod.Product.Name</p>            

        }
    </div>
    <div class="registration">
        <form action="/addproduct" method="POST">
            <h2>Add Category</h2>
            <br>
            <select style="color: black;" name="ProductId">
                @foreach (var item in ViewBag.AllProducts)
                {
                    
                    <option style="color: black;" value="@item.ProductId">@item.Name</option>
                }
            </select>
            <input type="hidden" name="CategoryId" value="@Model.CategoryId">
            <br>
            <br>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
    
    
</div>